
public class Prime {
	
	
	public static boolean Nprim(int n)
	{   if(n==1)
		 return false;
		int i;
		for(i=2;i<=n/2;i++)
			if(n%i==0) return false;
		return true;
		
	}
public static void main(String[] args)
{
	int i=1,k=0,nr_tot=0;
	float a;
	int dr_jos,dr_sus,st_jos,st_sus;
	boolean indicator=false;
	while(!indicator && i<=9)
	{   dr_jos = i*i;
	    if(Nprim(dr_jos))
	        k++;
	    st_jos = dr_jos - (i-1);
		if(Nprim(st_jos))
	    	k++;
		st_sus = st_jos - (i-1);
		if(Nprim(st_sus))
	    	k++;
		dr_sus = st_sus - (i-1);
		if(Nprim(dr_sus))
	    	k++;
		nr_tot= (2*i-1);
		System.out.printf("Numere totale is %d ",nr_tot);
		a=k/nr_tot;
		// System.out.print("Probabilitatea ii "+a);
		i=i+2;

				
				
				
		
		  // System.out.print(" \nAvem " + k + " numere prime\n");
	}
	// System.out.printf("exista %d numere prime si probabilitatea de %d",k,prob);
	
}
}
